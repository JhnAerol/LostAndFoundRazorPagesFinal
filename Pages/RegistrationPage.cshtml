@page
@model LostAndFoundRazorPages.Pages.RegistrationPageModel
@(
    Layout = ""
)

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>
<body>
    <div class="auth-card">
        <h3 class="auth-title">Create Account</h3>

        <form method="post" novalidate>
            <div class="mb-3">
                <label asp-for="User.UserName"></label>
                <input asp-for="User.UserName" class="form-control" placeholder="Enter username" />
                <span asp-validation-for="User.UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="User.Password"></label>
                <input asp-for="User.Password" type="password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 auth-btn">
                Register
            </button>

            <div class="mt-3 auth-link">
                <a asp-page="/LoginPage">Already have an account? Login</a>
            </div>
        </form>
    </div>
</body>
</html>
