@page "/home"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lost and Found</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>
<body>
    <div class="hero-section">
        <h1>Welcome @Model.UserName to Lost and Found</h1>
        <p>Your one-stop destination for reporting lost and found items.</p>

        <a asp-page="LostItemViews/Create" class="button">
            Report a Lost Item
        </a>

        <a asp-page="FoundItemViews/Create" class="button m-2">
            Report a Found Item
        </a>
    </div>

    <div class="container mt-5">
        <h2>Recent Lost & Found Items</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">Lost Wallet</div>
                    <div class="card-body">
                        <p>A brown leather wallet found near the park.</p>
                    </div>
                    <div class="card-footer text-muted">
                        Reported: 2 days ago
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">Found Keys</div>
                    <div class="card-body">
                        <p>Set of keys found in the shopping mall parking lot.</p>
                    </div>
                    <div class="card-footer text-muted">
                        Reported: 5 days ago
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">Lost Phone</div>
                    <div class="card-body">
                        <p>Black iPhone found in the coffee shop.</p>
                    </div>
                    <div class="card-footer text-muted">
                        Reported: 1 week ago
                    </div>
                </div>
            </div>
        </div>

        @if (Model.UserName != null)
        {
            <a class="nav-link text-dark" asp-area="" asp-page="/LoginPage">Logout</a>
        }
    </div>

</body>
</html>
