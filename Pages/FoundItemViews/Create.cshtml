@page
@model LostAndFoundRazorPages.Pages.FoundItemViews.CreateModel

        @{
        ViewData["Title"] = "Create";
        }

<link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />


<div class="page-bg">

    <div class="container">

        <div class="row justify-content-center">

            <div class="col-md-6">

                <div class="form-container">

                    <h3 class="form-title">Report a Found Item</h3>

                    <p class="form-subtitle">
                        Thank you for helping someone recover their lost belonging.
                        Your report could make someone's day better.
                    </p>


                    <div class="trust-note">

                        Your information is handled securely and used only to help match lost items.

                    </div>


                    <form method="post" enctype="multipart/form-data">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                        <!-- Item Name -->

                        <div class="mb-3">

                            <label asp-for="FoundItems.ItemName" class="form-label">
                                Item Name <span class="required">*</span>
                            </label>

                            <input asp-for="FoundItems.ItemName" class="form-control" placeholder="Example: Black Wallet" />

                            <span asp-validation-for="FoundItems.ItemName" class="text-danger"></span>

                        </div>


                        <!-- Description -->

                        <div class="mb-3">

                            <label asp-for="FoundItems.Description" class="form-label">
                                Description <span class="required">*</span>
                            </label>

                            <textarea asp-for="FoundItems.Description"
                                      class="form-control"
                                      rows="3"
                                      placeholder="Describe color, brand, or unique features"></textarea>

                            <span asp-validation-for="FoundItems.Description" class="text-danger"></span>

                        </div>


                        <!-- Location -->

                        <div class="mb-3">

                            <label asp-for="FoundItems.Location" class="form-label">
                                Location Found <span class="required">*</span>
                            </label>

                            <input asp-for="FoundItems.Location"
                                   class="form-control"
                                   placeholder="Example: Library, Room 202" />

                            <span asp-validation-for="FoundItems.Location" class="text-danger"></span>

                        </div>


                        <!-- Date -->

                        <div class="mb-3">

                            <label asp-for="FoundItems.DateFound" class="form-label">
                                Date Found
                            </label>

                            <input asp-for="FoundItems.DateFound"
                                   class="form-control" />

                            <span asp-validation-for="FoundItems.DateFound" class="text-danger"></span>

                        </div>


                        <!-- Image -->

                        <div class="mb-3">

                            <label class="form-label">
                                Upload Image <span class="required">*</span>
                            </label>

                            <input type="file"
                                   name="ImageFile"
                                   class="form-control"
                                   accept="image/*"
                                   required />

                        </div>


                        <!-- Submit -->

                        <div class="mt-4">

                            <button type="submit" class="btn btn-submit">

                                Submit Found Item Report

                            </button>

                        </div>


                    </form>


                    <div class="mt-3">

                        <a asp-page="Index" class="btn-back">

                            ← Back to Found Items

                        </a>

                    </div>


                </div>

            </div>

        </div>

    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
