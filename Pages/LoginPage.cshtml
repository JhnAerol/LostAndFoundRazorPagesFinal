@page "/LoginPage"
@model LostAndFoundRazorPages.Pages.LoginPageModel
@(
    Layout = ""
)

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/reports.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-4" style="max-width:450px;">
        <h3 class="mb-3 text-center">Login</h3>

        <form method="post">
            <div class="mb-3">
                <label>Username</label>
                <input asp-for="LoginUser.UserName" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Password</label>
                <input asp-for="LoginUser.Password" type="password" class="form-control" />
            </div>

            <button class="btn btn-success w-100" type="submit">
                Login
            </button>

            <div class="mt-3 text-center">
                <a asp-page="/RegistrationPage">Create Account</a>
            </div>

            <p class="text-danger mt-2">@Model.ErrorMessage</p>
        </form>
    </div>
</body>
</html>
