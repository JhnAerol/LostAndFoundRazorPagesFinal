@page "/LoginPage"
@model LostAndFoundRazorPages.Pages.LoginPageModel
@(
    Layout = ""
)

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>
<body>
    <div class="auth-card">
        <h3 class="auth-title">Login</h3>

        <form method="post" novalidate>
            <div class="mb-3">
                <label asp-for="LoginUser.UserName"></label>
                <input asp-for="LoginUser.UserName" class="form-control" placeholder="Username" />
            </div>

            <div class="mb-3">
                <label asp-for="LoginUser.Password"></label>
                <input asp-for="LoginUser.Password" type="password" class="form-control" placeholder="Password" />
            </div>

            <button type="submit" class="btn btn-success w-100 auth-btn">
                Login
            </button>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <p class="text-danger text-center mt-2">
                    @Model.ErrorMessage
                </p>
            }

            <div class="mt-3 auth-link">
                <a asp-page="/RegistrationPage">Create Account</a>
            </div>
        </form>
    </div>
</body>
</html>
